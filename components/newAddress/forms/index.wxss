/* components/newAddress/form/index.wxss */
page{
  background-color: #f5f5f5;
}
.name {
  width: 750rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: flex-start;
  border-bottom: 1rpx solid #d8d8d8;
  border-top: 1rpx solid #d8d8d8;
  margin-top: 20rpx;
}

.name text {
  margin-left: 32rpx;
  margin-right: 89rpx;
  font-size: 30rpx;
}

.name input {
  line-height: 100rpx;
  height: 100rpx;
}
.inputc{
  font-size: 30rpx;
  color: #B1B1B1;
}
.phone {
  width: 750rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: flex-start;
  border-bottom: 1rpx solid #d8d8d8;
  /* border-top: 1rpx solid #d8d8d8; *//* margin-top: 20rpx; */
}

.phone text {
  margin-left: 32rpx;
  margin-right: 60rpx;
  font-size: 30rpx;
}

.phone input {
  line-height: 100rpx;
  height: 100rpx;
}

.bottom {
  background-color: #ffffff;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 750rpx;
  line-height: 100rpx;
  text-align: center;
  border: 1rpx solid #d8d8d8;
}
.btn-area{
  position: fixed;
  bottom: 0;
  width: 100vw;
  background-color: #ccc;
}
/*new*/
.input-wrap{
  padding-left:32rpx;
  background-color: #ffffff;
  margin-top: 25rpx;
}
.input-item{
  padding: 20rpx 0;
  display: flex;
  border-bottom: 1rpx #e1e1e1 solid;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.no-bot{
  border-bottom: unset;
}
.item-name{
  width: 25%;
  font-size: 30rpx;
}
.item-r{
  width: 75%;
  box-sizing: border-box;
  padding-right: 64rpx;
}
.item-txt{
  font-size: 30rpx;
  width: 100%;
}
.txt-area{
  height: auto;
  align-items: unset;
}
.txt-area .item-txt{
  height: 110rpx;
}
.address-row{
  margin-top: 25rpx;
  padding-left:32rpx;
  padding-right:32rpx;
  background-color: #ffffff;
  border-bottom: unset;
}
.address-row .item-name{
  width: auto;
}
.txtHolder{
  color: #aaaaaa;
  font-size: 30rpx;
}
.place-row .txtHolder{
  text-align: right;
}
.arrow-r{
  position: absolute;
  right: 32rpx;
}
.arrow-r{
  background-image: url("data:image/png;base64,");
  background-size: 100% 100%;
  width: 15rpx;
  height: 27rpx;
}
.picker{
  width: 100%;
}
.btn-wrap{
  margin-top: 100rpx;
  width: 100%;
  padding: 0 32rpx;
  box-sizing: border-box;
}
.btn-wrap button{
  color: #ffffff;
  background-color: #568a4d;
  border: none;
  font-size: 32rpx;
}