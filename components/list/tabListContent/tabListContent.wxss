/* components/list/tabListContent/tabListContent.wxss */
.goods-area{
    box-sizing: border-box;
    position: absolute;
    z-index: 1;
    width: 100%;
    height: 100%;
    padding-left: 180rpx;
    padding-top: 100rpx;
}
.goods-list{
    width: 100%;
    height: 100%;
}
.goods-list-hide{
    display: none;
}
.goods-item{
    box-sizing: border-box;
    width: 100%;
    min-height: 192rpx;
    position: relative;
    margin-top: 32rpx;
    padding-left: 188rpx;
}
.goods-img{
    width: 132rpx;
    height: 132rpx;
    position: absolute;
    top: 0;
    left: 32rpx;
}
.goods-info{
    box-sizing: border-box;
    width: 100%;
    position: relative;
    padding-right: 100rpx;
}
.goods-info .goods-name{

    text-overflow:ellipsis;
    display:-webkit-box;
    word-break:break-all;
    overflow:hidden;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:1;
}
.goods-name{
    font-size: 30rpx;
    font-weight: 500;
}
.goods-tips,
.sale-num{
    font-size: 26rpx;
    font-weight: 400;
    color: #999999;
}
.goods-tab{
    height: 36rpx;
    line-height: 36rpx;
    padding: 0 10rpx;
    background-color: #FCEEE9;
    color: #e95a27;
    font-size: 24rpx;
    font-weight: 400;
    display: inline-block;
}
.goods-price{
    height: 56rpx;
    font-size: 40rpx;
    font-weight: 500;
    color: #ff3b30;
    line-height: 56rpx;
}
.btn-add{
    width: 44rpx;
    height: 44rpx;
    position: absolute;
    right: 32rpx;
    bottom: 0;
    background-size: 100% 100%;
    background-image:url('data:image/png;base64,');
}

