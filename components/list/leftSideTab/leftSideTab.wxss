/* components/list/leftSideTab/leftSideTab.wxss */
.left-area{
    box-sizing: border-box;
    width: 180rpx;
    height: 100%;
    padding-top: 99rpx;
    background-color: #f5f5f5;
    position: fixed;
    left: 0;
    top:0;
    z-index: 5;
    /*border-right: solid 1px #e1e1e1;*/
    overflow-y: auto;
}
.nav-item{
    height:  90rpx;
    width: 180rpx;
    font-size: 28rpx;
    color: #414141;
    line-height: 90rpx;
    text-align: center;
    /*border-bottom: solid 1px #e1e1e1;*/
    position: relative;
}
.nav-item-taped{
    background-color: #ffffff;
    width: 101%;
    border-right: unset;
    z-index: 9;
}
.nav-item-taped::before{
    content: '';
    display: block;
    width: 8rpx;
    height: 90rpx;
    background-color: #333333;
    position: absolute;
    left: 0;
}