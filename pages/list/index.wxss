.search-bar{
    background-color: #ffffff;
    height: 70rpx;
    padding: 15rpx 0;
    /*border-bottom: #e1e1e1 1rpx solid;*/
    position: fixed;
    z-index: 9;
    width: 100%;

}
.search-wrap{
    height: 100%;
    padding: 0 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.title{
    font-size: 26rpx;
}
.search-container{
    background-color: #f1f1f1;
    border-radius: 8rpx;
    line-height: 60rpx;
    display: flex;
    align-items: center;
    width: 518rpx;
}
.search-icon{
    width: 28rpx;
    height: 28rpx;
    margin-left: 20rpx;
    margin-right: 12rpx;
}
.search-input{
    height: 70rpx;
    color: #333333;
    font-size: 26rpx;
    background-color: #f1f1f1;
    line-height: 70rpx;
}

.left-area{
    box-sizing: border-box;
    width: 180rpx;
    height: 100%;
    padding-top: 99rpx;
    background-color: #f5f5f5;
    position: fixed;
    left: 0;
    top:0;
    z-index: 5;
    /*border-right: solid 1px #e1e1e1;*/
    overflow-y: auto;
}
.nav-item{
    height:  90rpx;
    width: 180rpx;
    font-size: 28rpx;
    color: #414141;
    line-height: 90rpx;
    text-align: center;
    /*border-bottom: solid 1px #e1e1e1;*/
    position: relative;
}
.nav-item-taped{
    background-color: #ffffff;
    width: 101%;
    border-right: unset;
    z-index: 9;
}
.nav-item-taped::before{
    content: '';
    display: block;
    width: 8rpx;
    height: 90rpx;
    background-color: #333333;
    position: absolute;
    left: 0;
}
.goods-area{
    position: absolute;
    /*top: 90rpx;
    left: 180rpx;*/
    z-index:1;
    box-sizing: border-box;
    height: 100%;
    width: 100%;
    padding-left: 180rpx;
    padding-top: 100rpx;
}
.goods-area-hide{
    display: none;
}
.top-ad{
    padding: 40rpx;
    height: 200rpx;
}
.ad-img{
    width: 100%;
    height: 100%;
}
.class2-list{
    width: 100%;
    minHeight: 100rpx;
    padding-bottom: 100rpx;
}
.class2-item{
    margin-bottom: 15rpx;
}
.class2-title{
    padding: 20rpx  30rpx 15rpx;
    font-size: 24rpx;
    color: #333333;
    font-weight: bolder;
}
.class3-list{
    box-sizing: border-box;
    width: 100%;
    height: auto;
    padding: 0 27.5rpx 0rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
}
.class3-item{
    width: 140rpx;
    /*height: 185rpx;*/
    margin: 15rpx 12.5rpx;
}
.class3-img{
    width: 140rpx;
    height: 140rpx;
}
.class3-name{
    margin-top: 19rpx;
    font-size: 26rpx;
    line-height: 25rpx;
    /*text-align: center;*/
}