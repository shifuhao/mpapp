.title{
    display: flex;
    justify-content: space-between;
    padding: 0 32rpx;
    border-bottom: 1rpx solid rgba(216,216,216,0.7);
    color: #444;
    font-size:24rpx;
    background-color: #e1e1e1;
    font-family:PingFangSC-Regular;
    font-weight:400;
    line-height:72rpx;
}
.des{
    display: flex;
    justify-content: space-between;
    margin: 0 32rpx;
    border-bottom: 1rpx solid rgba(216,216,216,0.7);
    color: #A7A7A7;
    font-size:24rpx;
    font-family:PingFangSC-Regular;
    font-weight:500;
    line-height:72rpx;
}
.count{
    border-bottom: 10rpx solid rgba(216,216,216,0.7);

}
.count .des:last-child{
    border: none;
}
.name{
    width:73rpx;
}
.time{
    width: 171rpx;
}
.bigimg image{
    box-sizing: border-box;
    width: 100%;
    /*padding: 0 30rpx;*/
